<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI onOpen="onOpen" onClose="onClose" onCreate="onCreate">
    <GuiElement type="empty" profile="newLayer" />
    <GuiElement type="bitmap" profile="dialogFullscreenBg" />
    <GuiElement type="bitmap" profile="bgVignette"/>
    <GuiElement type="bitmap" profile="bgGlowDialog" />

    <GuiElement type="bitmap" profile="passwordDialogBg" id="dialogElement">
        <GuiElement type="text" profile="dialogTitle" text="$l10n_CM_dialogs_addPoints_title" id="dialogTitleElement"/>

        <GuiElement type="flowLayout" profile="addPointsInputBoxDialog" id="pointsGroup">
            <GuiElement type="text" profile="dialogText" text="$l10n_CM_dialogs_addPoints_points_text"/>
            <GuiElement type="textInput" profile="dialogTextInput" id="pointsInput" onEnterPressed="onPointsEnterPressed" onEscPressed="onEscPressed" onFocus="onInputFocus" onLeave="onInputLeave" imeKeyboardType="normal" imeTitle="" imeDescription="" imePlaceholder="" enterWhenClickOutside="false" />
        </GuiElement>

        <GuiElement type="flowLayout" profile="addPointsInputBoxDialog" id="reasonGroup">
            <GuiElement type="text" profile="dialogText" text="$l10n_CM_dialogs_addPoints_reason_text"/>
            <GuiElement type="textInput" profile="dialogTextInput" id="reasonInput" onEnterPressed="onReasonEnterPressed" onEscPressed="onEscPressed" onFocus="onInputFocus" onLeave="onInputLeave" imeKeyboardType="normal" imeTitle="" imeDescription="" imePlaceholder="" enterWhenClickOutside="false" />
        </GuiElement>

        <GuiElement type="flowLayout" profile="buttonBoxDialog" id="buttonsPC" >
            <GuiElement type="button" profile="buttonBack"  text="$l10n_button_cancel"  onClick="onClickBack" id="noButton" />
            <GuiElement type="button" profile="buttonOK"    text="$l10n_button_save"    onClick="onClickOk"   id="yesButton" />
        </GuiElement>
    </GuiElement>
</GUI>
